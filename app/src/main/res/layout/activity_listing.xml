<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="edu.uark.csce.pizzaparty.uark_directory.ListingActivity">

    <!-- Top pannel -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:layout_marginBottom="15dp">
        <!-- TODO: remove background color android:background="#F3F3F3" -->

        <!-- Left side of the top pannel-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/app_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/listing_app_name"
                    android:paddingRight="15dp"
                    android:textSize="32sp"/>


                <TextView
                    android:id="@+id/app_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/listing_app_version" />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/app_developer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/listing_developer"
                    android:textSize="24sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Right side of top pannel -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <!-- TODO: remove background android:background="#B9B9B9" -->

            <ImageView
                android:id="@+id/listing_app_thumbnail"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:background="@drawable/placeholder"
                android:layout_centerHorizontal="true"/>
            <Button
                android:id="@+id/listing_download_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/listing_download_button"
                android:layout_below="@+id/listing_app_thumbnail"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>


    <!-- Scrolling textview description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/listing_description_title"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/listing_description_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="6"
        android:scrollbars="vertical"
        android:text="@string/listing_description_box_placeholder"
        android:layout_marginBottom="15dp"
        android:padding="3dp"
        android:background="@drawable/textview_border"
        />

    <!-- Horizontal image scroll view -->
    <HorizontalScrollView
        android:id="@+id/horizontal_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_border">
        <LinearLayout
            android:id="@+id/scrollview_inner_layout"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:orientation="horizontal">
        </LinearLayout>
    </HorizontalScrollView>


</LinearLayout>
